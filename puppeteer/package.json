{
  "name": "estopia-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end tests for Estopia property management system",
  "scripts": {
    "test": "jest",
    "test:headless": "HEADLESS=true jest",
    "test:debug": "HEADLESS=false SLOWMO=50 jest",
    "test:validation": "jest --testNamePattern=\"validation\"",
    "test:crud": "jest --testNamePattern=\"crud\"",
    "test:screenshots": "jest --testNamePattern=\"visual\"",
    "clean:screenshots": "rimraf screenshots/*.png"
  },
  "dependencies": {
    "puppeteer": "^22.0.0",
    "jest": "^29.7.0",
    "jest-puppeteer": "^10.0.1",
    "jest-image-snapshot": "^6.4.0",
    "rimraf": "^5.0.0"
  },
  "jest": {
    "preset": "jest-puppeteer",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "testTimeout": 30000,
    "setupFilesAfterEnv": [
      "./jest.setup.js"
    ],
    "verbose": true
  }
}